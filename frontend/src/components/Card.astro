---
export interface Props {
	quote: string; 
	imgurl: string;
	sketch: string;
	season: string;
	episode: string;
	character: string;
}

let  { quote, imgurl, sketch, season, episode, character } = Astro.props;
if(character !== undefined){character = " - " + character}
let alt = quote.substring(0, 100)
---

<li class="p-5">
	<div class="rounded-lg p-5 bg-gray-800 h-full">
		<i>{sketch}</i>, Season: {season}, Ep: {episode}<br />
		<img src={imgurl} alt={alt} /><br />
		<h3 class="text-xl quoteText cursor-copy selection:bg-amber-300 selection:text-black">{quote}</h3>
		<div class="text-right pt-2 float-right">{character}</div>
	</div>
</li>